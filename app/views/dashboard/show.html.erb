<br />

<div class="box col-md-5 col-md-offset-4">
    <h1>My Dashboard</h1>
    <h4><%= current_user.email %></h4>
    <h4>User ID: <%= current_user.id %></h4>
  <div>
    <div>
      <% if user_signed_in? %>
        <% if @my_games.present? %>
          <h2>My Games</h2>
          <% @my_games.each do |my_game| %>
            <%= link_to my_game.name, game_path(my_game), :class => 'btn btn-success' %>
            <br />
            <br />
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>


  <div>
    <div>
      <% if @open_games.present? %>
        <h2>Open games</h2>
        <% @open_games.each do |open_game| %>
          <h4> <%=  open_game.name %> <h4/>
           <%= link_to "JOIN", game_path(open_game), :method => :put, :class => 'btn btn-danger'  %>
          <br />
        <% end %>
      <% end %> 
    </div>
  </div>
</div>
