<br />

<div class="dash col-xs-10 col-xs-offset-1">
    <h1>My Dashboard</h1>
    <h4><%= current_user.email %></h4>
    <h4><%= current_user.id %></h4>
  <div>
    <div>
      <% if user_signed_in? %>
        <% if @my_games.present? %>
          <h2>My Games</h2>
        <% end %>
      <% end %>

    </div>

  </div>

  <div>
    <div>
      <% if @open_games.present? %>
        <h2>Open games</h2>
        <%= @open_games.each do |game| %>
          <%= link_to game.name, game_path(game) %>
          <%= user_email_from_id(game.white_player_id) %>
        <% end %>

      <% end %>
    </div>

  </div>


</div>
