<br />
<div class="booyah-box-devise col-xs-6 col-xs-offset-3">
  <h2>LOG IN</h2>
  <hr />

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :style=> 'width: 100%'  %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :style=> 'width: 100%'  %>
    </div>
    <br />

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <br />

    <div class="actions">
      <%= f.submit "Log in", :class => 'btn btn-lg btn-primary btn-block btn-next' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>