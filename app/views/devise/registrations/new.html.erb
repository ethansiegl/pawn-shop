<br />
<div class="booyah-box-devise col-xs-6 col-xs-offset-3">
  <div>
    <h2>SIGN UP</h2>
    <hr />
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :style=> 'width: 100%' %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <br />
      <%= f.password_field :password, autocomplete: "off", :style=> 'width: 100%' %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :style=> 'width: 100%' %>
    </div>

    <div class="actions">
      <br />
      <%= f.submit "SIGN UP", :class => 'btn btn-lg btn-primary btn-block btn-next' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
