<DOCTYPE html>
<html>

<head>


</head>

	<body>

		<h1>Welcome to Pawn Shop</h1>

		<table>
			<% 8.downto(1) do |row| %>
        <tr class="row <%= row %>">
          <% 1.upto(8) do |column| %>
            <td class="<%= column %> <%= row %>">
              <!--check to see if there is a piece-->
            	<% if piece = @game.pieces.detect { |piece| piece.y_coordinate == row && piece.x_coordinate == column } %>

                <div class="piece" id="piece-<%= piece.id %>">
                  <%= image_tag ("#{piece.color}#{piece.type.downcase}.png") %>
                </div>

              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>

		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" ></script>
		<script>
			$('.piece').sortable({
			  update: function( event, ui ) {
					$.ajax({
						type: 'PUT',
						url: ui.item.data('update-url'),
						dataType: 'json',
						data: {  }
						})
				}
			});

			var chessPiece = $('.piece').attr('id');

		</script>

	</body>


</html>
