<DOCTYPE html>
<html>

<head>

<script>
    $(function() {
        $('.piece').draggable({
            snap: '.square',
            snapMode: 'outer',
            snapTolerance: 40,
            revert: 'invalid',
            opacity: 0.20,
            refreshPositions: true
        });

        $('.square').droppable({
            accept: '.piece',
            drop: function(event, ui) {
                var originalSquare_id = $(ui.draggable).parent().attr('id');
                var capturedPiece = $(this).children().attr('id');
                var piece = $(ui.draggable).attr('id');
                var row = $(this).attr('row_id');
                var column = $(this).attr('column_id');
                var game = <%= current_game.id %>

                console.log("original row and column: " + originalSquare_id );
                console.log("dropped " + piece + " on " + row + "," + column + " for " + game);
                console.log("captured piece id : " + capturedPiece)

                $.ajax({
                    type: 'PUT',
                    url: '/games/'+game+'/pieces/'+piece,
                    dataType: 'json',
                    data: {
                        x: row,
                        y: column
                    },
                    success: function(data) {
                      $('#'+capturedPiece).fadeOut("slow");
                    },

                    error: function(data) {
                        $('#'+piece).css({'left': 0, 'top': 0});
                        alert('Invalid Move');
                        console.log("fail");

                    }
                });
            }
        });
    });
</script>


</head>

	<body>
		<h1>Welcome to Pawn Shop</h1>

		<table>
      <% 8.downto(1) do |column| %>
        <tr class= "column <%= column %>">
          <% 1.upto(8) do |row| %>
            <td class= "square" row_id ="<%= row %>" column_id = "<%= column %>" id = "<%= row %><%= column %>" >
              <!--check to see if there is a piece-->
              <% if piece = @game.pieces.detect { |piece| piece.x_coordinate == row && piece.y_coordinate == column } %>

                <div class="piece" id="<%= piece.id %>">

                    <%= link_to image_tag("#{piece.color}#{piece.type.downcase}.png"), game_piece_path(@game,piece), remote: true %>

                </div>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>

    <!-- Modal -->
    <div class="modal">
      <input class="modal-state" id="pawn_promo" type="checkbox" />
        <div class="modal-fade-screen">
          <div class="modal-content">
            <div class="modal-close" for="pawn_promo"></div>
              <hgroup>
                <h4>Promote your pawn!</h4>
                <h6>Choose your piece:</h6>
              </hgroup>
              <form action="#" class="promotion-choice">
                <div class="promo-selection-container">
                  <% (@game.captured_piece).each do | piece | %>
                    <div class="promo-selection-choice">
                    <%= link_to image_tag("#{piece.color}#{piece.type.downcase}.png"), game_piece_path(@game,piece) %>
                    <input type="radio" name="piece-type" value="<%= piece.type %>" id="<%= piece.type.downcase %>">
                    </div>
                  <% end %>
                </div>
                <div class="promo-selection-submit">
                  <input type="submit">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>


	</body>


</html>
